# custom button
<CustomButton@Button>:
    font_size: 40
  
# screen features
<CalcGridLayout>:
    id: calculator # tab name
    display: display_this # used to display
    rows: 5 # number of rows
    padding: 10
        # distance from window size to button position
        # padding defined here sets it as the default
        # can be redefined in BoxLayout but cannot be less than the defined value here
    spacing: 10 # space between buttons
  
    # entry is displayed
    BoxLayout:
        TextInput:
            id: display_this
            font_size: 32
            multiline: False
  
    # update display_this on button press
    BoxLayout:
        spacing: 10
        CustomButton:
            text: "7"
            on_press: display_this.text += self.text
        CustomButton:
            text: "8"
            on_press: display_this.text += self.text
        CustomButton:
            text: "9"
            on_press: display_this.text += self.text
        CustomButton:
            text: "+"
            on_press: display_this.text += self.text
  
    BoxLayout:
        spacing: 10
        CustomButton:
            text: "4"
            on_press: display_this.text += self.text
        CustomButton:
            text: "5"
            on_press: display_this.text += self.text
        CustomButton:
            text: "6"
            on_press: display_this.text += self.text
        CustomButton:
            text: "-"
            on_press: display_this.text += self.text
  
    BoxLayout:
        spacing: 10
        CustomButton:
            text: "1"
            on_press: display_this.text += self.text
        CustomButton:
            text: "2"
            on_press: display_this.text += self.text
        CustomButton:
            text: "3"
            on_press: display_this.text += self.text
        CustomButton:
            text: "*"
            on_press: display_this.text += self.text

    BoxLayout:
        spacing: 10
        CustomButton:
            text: "Clear"
            on_press: display_this.text = ""
        CustomButton:
            text: "0"
            on_press: display_this.text += self.text
        CustomButton:
            text: "="
            on_press: calculator.calculate(entry.text)
        CustomButton:
            text: "/"
            on_press: display_this.text += self.text